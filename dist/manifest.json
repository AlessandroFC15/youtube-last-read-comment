{
    "name": "YouTube Last Read Comment",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "",
    "homepage_url": "",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "browser_action": {
      "default_title": "YT Last Read Comment",
      "default_popup": "popup.html"
    },
    "default_locale": "en",
    "permissions": [
      "https://*/*"
    ],
    "content_security_policy": "default-src 'self';",
    "content_scripts": [
      {
        "matches": [
          "https://*/*"
        ],
        "js": [
          "js/content.js"
        ]
      }
    ]
  }
  
